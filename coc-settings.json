{
  "languageserver": {
    "nim": {
      "command": "nimlsp",
      "filetypes": ["nim"],
      "trace.server": "verbose"
    },
    "lua": {
      "command": "/home/alex/.config/coc/extensions/coc-lua-data/sumneko-lua-ls/bin/Linux/lua-language-server",
      "args": [
        "-E",
        "/home/alex/.config/coc/extensions/coc-lua-data/sumneko-lua-ls/bin/Linux/main.lua"
      ],
      "filetypes": ["lua"],
      "settings": {
        "Lua": {
          "workspace.library": {
            "/usr/local/share/nvim/runtime/lua": true,
            "/usr/local/share/nvim/runtime/lua/vim": true,
            "/usr/local/share/nvim/runtime/lua/vim/lsp": true
          },
          "diagnostics": {
            "globals": [ "vim" ]
          }
        }
      }
    }
  },
  "codeLens.enable": true,
  "suggest.enableFloat": true,
  "dialog.maxWidth": 40,
  "dialog.rounded": true,
  "suggest.formatItems": [
    "abbr",
    "menu",
    "kind",
    "shortcut"
  ],
  "suggest.virtualText": true,
  "suggest.detailField": "abbr",
  "suggest.noselect": false,
  "suggest.enablePreselect": false,
  "suggest.floatConfig": {
    "border": true,
    "winblend": 0,
    "borderhighlight": "FloatBorder",
    "highlight": "NormalFloat"
  },
  "suggest.minTriggerInputLength": 4,
  "suggest.labelMaxLength": 80,
  "suggest.maxCompleteItemCount": 50,
  "signature.enable": true,
  "signature.hideOnTextChange": true,
  "signature.triggerSignatureWait": 1000,
  "diagnostic.floatConfig": {
      "border": true
  },
  "hover.floatConfig": {
      "border": true
  },
  "signature.floatConfig": {
      "border": true
  },
  "outline.sortBy": "position",
  "outline.expandLevel": 2,
  "inlayHint.display": true,
  "outline.splitCommand": "rightb 30vs",
  "list.floatPreview": true,
  "list.height": 15,
  "list.previewSplitRight": false,
  "inlayHint.enableParameter": true,
  "outline.keepWindow": false,
  "notification.border": true,
  "outline.previewBorder": true,
  "suggest.autoTrigger": "always",
  "outline.followCursor": false,
  "semanticTokens.enable": true,
  "codeLens.position": "eol",
  "inlayHint.enable": false,
  "outline.checkBufferSwitch": true,
  "snippets.ultisnips.pythonPrompt": false,
  "coc.preferences.enableMessageDialog": true,

}