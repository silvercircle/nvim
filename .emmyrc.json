{
  "runtime": {
    "version": "LuaJIT",
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua",
      "?/lua/?.lua",
      "?/lua/?/init.lua"
    ]
  },
  "diagnostics": {
    "disable": ["unnecessary-if"]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",
      "$LLS_Addons/luvit",
      "$HOME/.local/share/nvim/lazy"
    ],
    "ignoreGlobs": ["**/*_spec.lua"]
  }
}
